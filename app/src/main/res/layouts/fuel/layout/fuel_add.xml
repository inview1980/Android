<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/rental_main_gridview_margin_3"
    android:background="@color/white"
    android:stretchColumns="1">

    <include layout="@layout/main_toolbar" />

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/date" />

        <TextView
            android:id="@+id/date"
            style="@style/editView_middle_right"
            android:layout_span="2" />
    </TableRow>

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/money" />

        <EditText
            android:id="@+id/totalMoney"
            style="@style/editView_middle_right"
            android:layout_span="2" />
    </TableRow>

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/rise" />

        <EditText
            android:id="@+id/rise"
            style="@style/editView_middle_right"
            android:layout_span="2" />
    </TableRow>

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/original_price" />

        <EditText
            android:id="@+id/original_price"
            style="@style/editView_middle_right"
            android:layout_span="2" />
    </TableRow>

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/odometerNumber" />

        <EditText
            android:id="@+id/odometerNumber"
            style="@style/editView_middle_right"
            android:layout_span="2" />
    </TableRow>

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/textView_1th"
            android:text="@string/station_name" />

        <my_manage.ui.widght.DropEditText
            android:id="@+id/station_name"
            style="@style/editView_middle_right" />


    </TableRow>

    <TableRow>

        <com.deadline.statebutton.StateButton
            android:id="@+id/ok"
            style="@style/StateButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rental_main_gridview_margin_6"
            android:layout_span="3"
            android:text="@string/ok_cn"
            app:normalBackgroundColor="@color/blue"
            app:pressedBackgroundColor="@color/blue"
            app:round="true"
            app:unableBackgroundColor="@color/blue" />
    </TableRow>
</TableLayout>