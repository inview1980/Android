<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        tools:context=".fragment.PasswordManageItemDetailsFragment">

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/name_cn" />

        <EditText
            android:id="@+id/pwd_ItemDetailsId"
            style="@style/password_manage_details_edit_style" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/address_main_cn" />

        <EditText
            android:id="@+id/pwd_AddressDetailsId"
            style="@style/password_manage_details_edit_style" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/userName_cn" />

        <EditText
            android:id="@+id/pwd_UserNameDetailsId"
            style="@style/password_manage_details_edit_style"
            android:inputType="textVisiblePassword" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/password_cn" />

        <EditText
            android:id="@+id/pwd_PasswordDetailsId"
            style="@style/password_manage_details_edit_style"
            android:inputType="textVisiblePassword" />

        <TextView
            style="@style/pwdShowItemTxtStyle"
            android:text="@string/remark_cn" />

        <EditText
            android:id="@+id/pwd_RemarkDetailsId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3" />

        <com.deadline.statebutton.StateButton
            android:id="@+id/pwd_ManageDet_Ok_BtnId"
            android:enabled="false"
            style="@style/StateButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/ok_cn"
            app:normalBackgroundColor="@color/blue"
            app:pressedBackgroundColor="@color/blue"
            app:round="true"
            app:unableBackgroundColor="@color/blue" />
    </LinearLayout>
</ScrollView>
