<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_corner">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <com.hanks.htextview.rainbow.RainbowTextView
            android:id="@+id/pwd_ItemId"
            style="@style/textView_1th"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lines="2"
            app:colorSpace="150dp"
            app:colorSpeed="4dp" android:singleLine="false"
            android:textStyle="bold" />
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/rental_main_gridview_margin_6">

            <TextView
                style="@style/textView_min_1th"
                android:layout_height="wrap_content"
                android:text="@string/userName_cn"
                />

            <TextView
                android:id="@+id/pwd_UserNameId"
                style="@style/rental_textView_context"
                android:layout_width="115dp"
                android:layout_height="wrap_content" android:textSize="@dimen/min_size"
                />

            <TextView
                style="@style/textView_min_1th"
                android:layout_height="wrap_content"
                android:text="@string/password_cn"
                />

            <TextView
                android:id="@+id/pwd_PasswordId"
                style="@style/rental_textView_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" android:textSize="@dimen/min_size"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:layout_marginBottom="@dimen/rental_main_gridview_margin_6">

            <TextView
                style="@style/textView_min_1th"
                android:layout_height="wrap_content"
                android:text="@string/address_main_cn"
                />

            <TextView android:layout_span="3"
                android:id="@+id/pwd_AddressId" android:textSize="@dimen/min_size"
                style="@style/rental_textView_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>
