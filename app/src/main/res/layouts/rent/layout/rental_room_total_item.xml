<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner"
    android:columnCount="2">

    <com.hanks.htextview.rainbow.RainbowTextView
        android:id="@+id/rental_main_CommunityName"
        android:layout_width="@dimen/pwdItemWidth"
        android:layout_height="match_parent"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="jjjkdj"
        android:textColor="@color/rentalMainGridViewTitleColor"
        android:textSize="@dimen/rental_main_gridview_title_fontsize"
        android:textStyle="bold"
        app:colorSpace="150dp"
        app:colorSpeed="4dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_columnWeight="3"
        android:background="@android:color/white"
        android:paddingStart="@dimen/rental_main_gridview_margin_6">

            <TableRow>

                <TextView
                    style="@style/textView_1th"
                    android:text="@string/rental_roomCount_cn" android:gravity="center"
                     />
                <TextView
                    android:id="@+id/rental_main_item_roomTotal"
                    android:text="@string/rental_roomCount_cn"
                    style="@style/rental_textView_context"/>
            </TableRow>


        <TableRow>

            <TextView
                style="@style/textView_1th"
                android:text="@string/rental_areaTotal_cn"
                />

            <TextView
                android:id="@+id/rental_main_item_areaTotal"
                style="@style/rental_textView_context"/>
        </TableRow>
    </TableLayout>
</GridLayout>