<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayWhite"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:shrinkColumns="3"
        android:stretchColumns="1"
        tools:ignore="ExtraText">

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_communityName_cn" />

            <com.hanks.htextview.rainbow.RainbowTextView
                android:id="@+id/rental_editRoom_community"
                style="@style/rental_textView_Lable"
                android:layout_span="3" />
        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_houseNumber_cn" />

            <com.hanks.htextview.rainbow.RainbowTextView
                android:id="@+id/rental_editRoom_roomNumber"
                style="@style/rental_textView_Lable"

                android:layout_span="3" />

        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_monthlyRent_cn" />

            <EditText
                android:id="@+id/rental_editRoom_realtyMoney"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_propertyPrice_cn" />

            <EditText
                android:id="@+id/rental_editRoom_propertyPrice"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_meterNumber_cn" />

            <EditText
                android:id="@+id/rental_editRoom_meterNumber"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false" />
        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="水表号:" />

            <EditText
                android:id="@+id/rental_editRoom_waterMeter"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false" />
        </TableRow>

        <TableRow style="@style/rental_room_details_tableRow">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_area_cn" />

            <EditText
                android:id="@+id/rental_editRoom_area"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_editRoom_person_extend"
            style="@style/rental_room_details_tableRow"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="住户资料:" />

            <TextView
                android:id="@+id/rental_editRoom_extend_txt1"
                android:layout_column="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/click_extend" />

            <ImageView
                android:id="@+id/img_shrink"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_downward_black_24dp" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_editRoom_person1"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_gravity="center_vertical"
                android:text="@string/rental_man_cn" />


            <Spinner
                android:id="@+id/rental_editRoom_person"
                style="@style/rental_textView_Lable"
                android:layout_width="100dp"
                android:layout_gravity="center_vertical"
                android:layout_span="2"
                android:clickable="false" />

            <Button
                android:id="@+id/rental_editRoom_add"
                android:layout_width="60dp"
                android:background="#00000000"
                android:text="@string/new_cn" />

        </TableRow>

        <TableRow
            android:id="@+id/rental_editRoom_person2"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/tel" />

            <EditText
                android:id="@+id/rental_editRoom_tel"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_editRoom_person3"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_manCardNumber_cn" />

            <EditText
                android:id="@+id/rental_editRoom_manCardNumber"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false" />
        </TableRow>


        <TableRow android:id="@+id/rental_editRoom_person4">

            <EditText
                android:id="@+id/rental_editRoom_person_remark"
                android:layout_span="4"
                android:background="@android:color/white"
                android:enabled="false"
                android:gravity="left"
                android:hint="@string/remark_cn"
                android:minLines="3" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_editRoom_other_extend"
            style="@style/rental_room_details_tableRow"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="房租信息:" />

            <TextView
                android:id="@+id/rental_editRoom_extend_txt2"
                android:layout_column="2"
                android:layout_gravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/click_extend" />

            <ImageView
                android:id="@+id/img_shrink2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_downward_black_24dp" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout0"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_gravity="center_vertical"
                android:text="缴费总金额:" />

            <EditText
                android:id="@+id/totalMoney"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout1"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_gravity="center_vertical"
                android:text="@string/rental_isContainRealty_cn" />

            <CheckBox
                android:id="@+id/rental_editRoom_isContainRealty"
                style="@style/rental_add_edit"
                android:enabled="false" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout2"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="交费时间:" />

            <TextView
                android:id="@+id/rental_editRoom_payDate"
                style="@style/rental_textView_Lable"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout3"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="押金:" />

            <EditText
                android:id="@+id/rental_editRoom_deposit"
                style="@style/rental_add_edit"
                android:layout_span="3"
                android:enabled="false"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout4"
            style="@style/rental_room_details_tableRow"
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_editRoom_rentalBeginDate_cn" />

            <TextView
                android:id="@+id/rental_editRoom_beginDate"
                style="@style/rental_textView_Lable" />


            <TextView
                style="@style/rental_textView_Lable"
                android:text="租期（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_rentalMonth"
                style="@style/rental_add_edit"
                android:enabled="false"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout5"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="房租结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_rentalEndDate"
                style="@style/rental_textView_Lable"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout6"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="@string/rental_propertyBeginDate" />

            <TextView
                android:id="@+id/rental_editRoom_propertyBeginDate"
                style="@style/rental_textView_Lable" />


            <TextView
                style="@style/rental_textView_Lable"
                android:text="时长（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_propertyMonth"
                style="@style/rental_add_edit"
                android:enabled="false"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout7"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="物业费结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_property_costsEndDate"
                style="@style/rental_textView_Lable"
                android:layout_span="3" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout8"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="合同开始时间:" />

            <TextView
                android:id="@+id/rental_editRoom_contract_BeginDate"
                style="@style/rental_textView_Lable" />


            <TextView
                style="@style/rental_textView_Lable"
                android:text="时长（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_contract_Month"
                style="@style/rental_add_edit"
                android:enabled="false"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/rental_room_details_other_layout9"
            style="@style/rental_room_details_tableRow"
            android:visibility="gone">

            <TextView
                style="@style/rental_textView_Lable"
                android:text="合同结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_Contract_EndDate"
                style="@style/rental_textView_Lable"
                android:layout_span="3" />
        </TableRow>


        <EditText
            android:id="@+id/rental_editRoom_remark"
            android:background="@android:color/white"
            android:enabled="false"
            android:gravity="left|top"
            android:hint="@string/remark_cn"
            android:minLines="3" />


        <TableRow
            style="@style/rental_room_details_tableRow"
            android:layout_marginTop="@dimen/rental_main_gridview_margin_3"
            android:gravity="right">

            <com.deadline.statebutton.StateButton
                android:id="@+id/rental_editRoom_changeBtn"
                android:text="@string/modify_cn"
                app:round="true"
                style="@style/StateButtonStyle"
                app:normalBackgroundColor="@color/banana"
                app:pressedBackgroundColor="@color/banana"
                app:unableBackgroundColor="@color/banana"
                android:visibility="gone" />

            <com.deadline.statebutton.StateButton
                style="@style/StateButtonStyle"
                android:id="@+id/rental_editRoom_okBtn"
                android:enabled="false"
                app:round="true"
                app:normalBackgroundColor="@android:color/holo_green_dark"
                app:pressedBackgroundColor="@android:color/holo_green_dark"
                app:unableBackgroundColor="@android:color/holo_green_dark"
                android:text="@string/ok_cn"
                android:visibility="gone" />

            <com.deadline.statebutton.StateButton
                style="@style/StateButtonStyle"
                android:layout_marginStart="@dimen/rental_main_gridview_margin_9"
                android:id="@+id/rental_editRoom_cancelBtn"
                android:paddingRight="@dimen/rental_main_gridview_margin_6"
                app:round="true"
                app:normalBackgroundColor="@color/blue"
                app:pressedBackgroundColor="@color/blue"
                app:unableBackgroundColor="@color/blue"
                android:text="@string/cancel_cn" />


        </TableRow>


    </TableLayout>
</ScrollView>
