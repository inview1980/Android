<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/rental_main_gridview_margin_6"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_communityName_cn" />

        <AutoCompleteTextView
            android:id="@+id/rental_editRoom_community"
            style="@style/rental_add_edit"
            android:layout_columnWeight="1"
            android:completionThreshold="0"
            android:enabled="false"
            android:labelFor="@id/rental_editRoom_community" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_houseNumber_cn" />

        <EditText
            android:id="@+id/rental_editRoom_roomNumber"
            style="@style/rental_add_edit"
            android:layout_columnWeight="1"
            android:autofillHints="@string/rental_houseNumber_cn"
            android:enabled="false"
            android:inputType="number"
            android:labelFor="@+id/rental_editRoom_roomNumber"
            android:tag="@string/rental_houseNumber_cn" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_monthlyRent_cn" />

        <EditText
            android:id="@+id/rental_editRoom_realtyMoney"
            style="@style/rental_add_edit"
            android:enabled="false"
            android:inputType="number" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_propertyPrice_cn" />

        <EditText
            android:id="@+id/rental_editRoom_propertyPrice"
            style="@style/rental_add_edit"
            android:enabled="false"
            android:inputType="number" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_meterNumber_cn" />

        <EditText
            android:id="@+id/rental_editRoom_meterNumber"
            style="@style/rental_add_edit"
            android:enabled="false" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_area_cn" />

        <EditText
            android:id="@+id/rental_editRoom_area"
            style="@style/rental_add_edit"
            android:enabled="false"
            android:inputType="number" />

        <TextView
            style="@style/rental_textView_Lable"
            android:layout_gravity="center_vertical"
            android:text="@string/rental_man_cn" />

        <LinearLayout
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/rental_editRoom_person"
                style="@style/rental_add_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:minWidth="150dp" />

            <Button
                android:id="@+id/rental_editRoom_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:text="@string/new_cn"
                android:textSize="@dimen/rental_lable_textSize" />
        </LinearLayout>

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/tel" />

        <EditText
            android:id="@+id/rental_editRoom_tel"
            style="@style/rental_add_edit"
            android:enabled="false"
            android:inputType="number" />

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_manCardNumber_cn" />

        <EditText
            android:id="@+id/rental_editRoom_manCardNumber"
            style="@style/rental_add_edit"
            android:enabled="false" />

        <TextView
            style="@style/rental_textView_Lable"
            android:layout_gravity="center_vertical"
            android:text="@string/rental_isContainRealty_cn" />

        <CheckBox
            android:id="@+id/rental_editRoom_isContainRealty"
            style="@style/rental_add_edit"
            android:enabled="false" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:alignmentMode="alignBounds"
            android:layout_columnSpan="2"
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:layout_marginBottom="@dimen/rental_main_gridview_margin_6"
            android:layout_marginStart="@dimen/rental_main_gridview_margin_3"
            android:layout_marginEnd="@dimen/rental_main_gridview_margin_3"
            android:paddingBottom="@dimen/rental_main_gridview_margin_3"
            android:background="@drawable/blue_borde_1"
            android:columnCount="4">

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="交费时间:" />

            <TextView
                android:id="@+id/rental_editRoom_payDate"
                style="@style/rental_textView_Lable"
                android:layout_columnWeight="@integer/rental_room_details_1width"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="押金:" />

            <EditText
                android:id="@+id/rental_editRoom_deposit"
                style="@style/rental_add_edit"
                android:layout_columnWeight="@integer/rental_room_details_2width"
                android:enabled="false"
                android:inputType="number" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="@string/rental_editRoom_rentalBeginDate_cn" />

            <TextView
                android:id="@+id/rental_editRoom_beginDate"
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:layout_columnWeight="@integer/rental_room_details_1width"
                android:enabled="false" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="租期（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_rentalMonth"
                style="@style/rental_add_edit"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_columnWeight="@integer/rental_room_details_2width"
                android:inputType="number" />

            <TextView
                style="@style/rental_textView_Lable"
                android:text="房租结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_rentalEndDate"
                style="@style/rental_textView_Lable"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:gravity="left" />


            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="@string/rental_propertyBeginDate" />

            <TextView
                android:id="@+id/rental_editRoom_propertyBeginDate"
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:layout_columnWeight="@integer/rental_room_details_1width"
                android:enabled="false" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="时长（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_propertyMonth"
                style="@style/rental_add_edit"
                android:layout_height="wrap_content"
                android:layout_columnWeight="@integer/rental_room_details_2width"
                android:enabled="false"
                android:inputType="number" />

            <TextView
                style="@style/rental_textView_Lable"
                android:text="物业费结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_property_costsEndDate"
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:gravity="left" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="合同开始时间:" />

            <TextView
                android:id="@+id/rental_editRoom_contract_BeginDate"
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:layout_columnWeight="@integer/rental_room_details_1width"
                android:enabled="false" />

            <TextView
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:text="时长（月）:" />

            <EditText
                android:id="@+id/rental_editRoom_contract_Month"
                style="@style/rental_add_edit"
                android:layout_height="wrap_content"
                android:layout_columnWeight="@integer/rental_room_details_2width"
                android:enabled="false"
                android:inputType="number" />

            <TextView
                style="@style/rental_textView_Lable"
                android:text="合同结束时间:" />

            <TextView
                android:id="@+id/rental_editRoom_Contract_EndDate"
                style="@style/rental_textView_Lable"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:layout_columnSpan="3"
                android:layout_columnWeight="1"
                android:gravity="left" />
        </GridLayout>


        <TextView
            style="@style/rental_textView_Lable"
            android:layout_marginTop="@dimen/rental_main_gridview_margin_6"
            android:text="@string/remark_main_cn" />

        <EditText
            android:id="@+id/rental_editRoom_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:enabled="false"
            android:minLines="2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="right">

            <Button
                android:id="@+id/rental_editRoom_changeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modify_cn"
                android:visibility="gone" />

            <Button
                android:id="@+id/rental_editRoom_okBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rental_main_gridview_margin_6"
                android:layout_marginEnd="@dimen/rental_main_gridview_margin_6"
                android:enabled="false"
                android:text="@string/ok_cn"
                android:visibility="gone" />

            <Button
                android:id="@+id/rental_editRoom_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rental_main_gridview_margin_6"
                android:text="@string/cancel_cn" />
        </LinearLayout>


    </GridLayout>
</ScrollView>
