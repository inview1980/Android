<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@color/grayWhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:stretchColumns="1">

    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_communityName_cn" />

        <Spinner
            android:id="@+id/rental_addRoom_communityName"
            style="@style/rental_textView_Lable"
            android:layout_marginEnd="@dimen/rental_main_gridview_margin_9"
            android:entries="@array/communityName" />
    </TableRow>


    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_houseNumber_cn" />

        <EditText
            android:id="@+id/rental_addRoom_houseNumber"
            style="@style/rental_add_edit"
            android:gravity="center_vertical|left" />
    </TableRow>


    <TableRow style="@style/rental_room_details_tableRow">


        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_area_cn" />

        <EditText
            android:id="@+id/rental_addRoom_area"
            style="@style/rental_add_edit"
            android:gravity="center_vertical|left"
            android:inputType="numberDecimal" />
    </TableRow>


    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_meterNumber_cn" />

        <EditText
            android:id="@+id/rental_addRoom_meterNumber"
            style="@style/rental_add_edit"
            android:gravity="center_vertical|left" />
    </TableRow>


    <TableRow style="@style/rental_room_details_tableRow">

        <TextView
            style="@style/rental_textView_Lable"
            android:text="@string/rental_propertyPrice_cn" />

        <EditText
            android:id="@+id/rental_addRoom_propertyPrice"
            style="@style/rental_add_edit"
            android:gravity="center_vertical|left"
            android:inputType="numberDecimal" />
    </TableRow>


    <TableRow
        style="@style/rental_room_details_tableRow"
        android:gravity="right">

        <com.deadline.statebutton.StateButton
            android:id="@+id/rental_addRoom_OkBtn"
            style="@style/StateButtonStyle"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rental_main_gridview_margin_9"
            android:text="@string/ok_cn"
            app:normalBackgroundColor="@color/banana"
            app:pressedBackgroundColor="@color/banana"
            app:round="true"
            app:unableBackgroundColor="@color/banana" />


    </TableRow>
</TableLayout>